  <document>
	<head>
	  <style>
	  </style>
	</head>
	<listTemplate>
		<background>
			<img src="/templates/background.png"/>
		</background>
	  <list style="width: 1000">
		  <section>
				{% for item in menu %}
				{% if msgid is defined %}
				<listItemLockup menuURL="{{item.menuurl}}" onselect="notify('/response/{{msgid}}/{{loop.index}}'); load('{{url}}')">
				{% else %}
				<listItemLockup menuURL="{{item.menuurl}}" onselect="load('/catalog/{{plugin.id | base64encode}}/{{item.url | base64encode}}')">								
				{% endif %}
				 	<title style="color:rgb(241,241,241); tv-highlight-color:rgb(0,0,0);">{{item.title}}</title>
				 	<relatedContent>
					 	<lockup>
						 	<img src="{{item.icon}}" width="857" height="842"/>
						 	<title style="color:rgb(241,241,241)">{{item.subtitle}}</title>
						 	<description style="color:rgb(241,241,241)">{{item.details}}</description>
					 	</lockup>
				 	</relatedContent>			 					 	
				</listItemLockup>
				{% endfor %}
			</section>
	  </list>
	</listTemplate>
  </document>
