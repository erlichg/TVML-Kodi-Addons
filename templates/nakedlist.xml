  <document>
	<head>
	  <style>
	  </style>
	</head>
	<listTemplate>
		<banner>
			<title>{{title}}</title>
			{% if text is defined %}
			<infoList>
				<info>
				{% for t in text %}
				<text style="font-size:30">{{t}}</text>
				{% endfor %}
				</info>
			</infoList>
			{% endif %}
		</banner>		
		<background>
			<img src="/templates/background.png"/>
		</background>
	  <list style="width: 1000">
		  <section>
				{% for item in menu %}
				{% if msgid is defined %}
				<listItemLockup menuURL="{{item.menuurl}}" onselect="notify('/response/{{msgid}}/{{loop.index}}'); load('{{url}}')">
				{% else %}
				<listItemLockup menuURL="{{item.menuurl}}" onselect="load('/catalog/{{plugin.id | base64encode}}/{{item.url | base64encode}}')">								
				{% endif %}							
				 	<title style="color:rgb(241,241,241); tv-highlight-color:rgb(0,0,0);">{{item.title}}</title>				 					 	
				</listItemLockup>
				{% endfor %}
			</section>
	  </list>
	</listTemplate>
  </document>
