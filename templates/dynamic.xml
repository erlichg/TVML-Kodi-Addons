  <document>
	<head id="segmentBar">
	  <style>
	  @media tv-template and (tv-theme:light) {
      	.foo { color:rgb(0, 0, 0); tv-tint-color:rgb(0,0,0); tv-highlight-color:rgb(0, 0, 0); tv-text-max-lines:15; tv-text-highlight-style: marquee-on-highlight; tv-minimum-scale-factor: 0.7; }
      	.foo2 { color:rgb(0, 0, 0); tv-highlight-color:rgb(0, 0, 0); tv-text-max-lines:15; }
		  .foo3 { tv-position:footer; tv-align:right; margin: 0; tv-tint-color:rgb(0,0,0); tv-highlight-color:rgb(0, 0, 0); }
	  }
	  @media tv-template and (tv-theme:dark) {
      	.foo { color:rgb(255, 255, 255); tv-tint-color:rgb(255,255,255); tv-highlight-color:rgb(0,0,0); tv-text-max-lines:15; tv-text-highlight-style: marquee-on-highlight; tv-minimum-scale-factor: 0.7; }
      	.foo2 { color:rgb(255, 255, 255); tv-highlight-color:rgb(255, 255, 255); tv-text-max-lines:15; }
		  .foo3 { tv-position:footer; tv-align:right; margin: 0; tv-tint-color:rgb(255,255,255); tv-highlight-color:rgb(255,255,255); }
	  }
	</style>
	</head>
	<catalogTemplate title="Details" id="list">
	  <list style="width: 1000">
		  <placeholder></placeholder>		  
		  <section>
				{% for item in menu %}
				{% if msgid is defined %}
				<listItemLockup onholdselect="if (Object.keys({{item.context}}).length > 0) { showSelectDialog('{{item.title}}', Object.keys({{item.context}}), 0, function(ans) { if (typeof ans != 'undefined') {performAction({{item.context}}[ans], '{{plugin.id}}');}});}" onselect="notify('/response/{{msgid}}/{{loop.index}}'); load('{{url}}')">
				{% else %}
				<listItemLockup onholdselect="if (Object.keys({{item.context}}).length > 0) { showSelectDialog('{{item.title}}', Object.keys({{item.context}}), 0, function(ans) { if (typeof ans != 'undefined') {performAction({{item.context}}[ans], '{{plugin.id}}');}});}" onselect="catalog('{{plugin.id | base64encode}}', '{{item.url | base64encode}}')">
				{% endif %}
					<row>
				 	<title class="foo">{{item.title}}</title>
					{% if item.play_state == 2 %}
					<badge class="foo" src="resource://button-checkmark"/>
					{% elif item.play_state == 1 %}
					<badge class="foo" src="resource://button-play"/>
					{% endif %}
					</row>
				 	<relatedContent>
					 	<lockup style="margin: 10">
						 	<img src="{{item.icon}}" width="857" height="842"/>
						 	<description style="tv-text-max-lines: 15;">{{item.details}}</description>
					 	</lockup>
				 	</relatedContent>			 					 	
				</listItemLockup>
				{% endfor %}
			</section>
	  </list>
	</catalogTemplate>
	<listTemplate title="List" id="nakedlist">		
	  <list style="width: 1000">
		  <placeholder></placeholder>	  
		  <section>
				{% for item in menu %}
				{% if msgid is defined %}
				<listItemLockup onholdselect="if (Object.keys({{item.context}}).length > 0) { showSelectDialog('{{item.title}}', Object.keys({{item.context}}), 0, function(ans) { if (typeof ans != 'undefined') {performAction({{item.context}}[ans], '{{plugin.id}}');}});}" onselect="notify('/response/{{msgid}}/{{loop.index}}'); load('{{url}}')">
				{% else %}
				<listItemLockup onholdselect="if (Object.keys({{item.context}}).length > 0) { showSelectDialog('{{item.title}}', Object.keys({{item.context}}), 0, function(ans) { if (typeof ans != 'undefined') {performAction({{item.context}}[ans], '{{plugin.id}}');}});}" onselect="catalog('{{plugin.id | base64encode}}', '{{item.url | base64encode}}')">
				{% endif %}
					<row>
				 	<title class="foo">{{item.title}}</title>
					{% if item.play_state == 2 %}
					<badge class="foo" src="resource://button-checkmark"/>
					{% elif item.play_state == 1 %}
					<badge class="foo" src="resource://button-play"/>
					{% endif %}
					</row>
				</listItemLockup>
				{% endfor %}
			</section>
	  </list>
	</listTemplate>
	<stackTemplate title="Grid" id="grid">
		<banner style="tv-align:center;">
			  <placeholder></placeholder>
			  </banner>
	  <collectionList>
		  <grid>

			  <section>
		  {% for item in menu %}
				
				{% if msgid is defined %}
				<lockup onhighlight="event.target.ownerDocument.getElementById('title').textContent='{{item.title}}'; event.target.ownerDocument.getElementById('subtitle').textContent='{{item.details}}';" onholdselect="if (Object.keys({{item.context}}).length > 0) { showSelectDialog('{{item.title}}', Object.keys({{item.context}}), 0, function(ans) { if (typeof ans != 'undefined') {performAction({{item.context}}[ans], '{{plugin.id}}');}});}" onselect="notify('/response/{{msgid}}/{{loop.index}}'); load('{{url}}')">
				{% else %}
				<lockup onhighlight="event.target.ownerDocument.getElementById('title').textContent='{{item.title}}'; event.target.ownerDocument.getElementById('subtitle').textContent='{{item.details}}';" onholdselect="if (Object.keys({{item.context}}).length > 0) { showSelectDialog('{{item.title}}', Object.keys({{item.context}}), 0, function(ans) { if (typeof ans != 'undefined') {performAction({{item.context}}[ans], '{{plugin.id}}');}});}" onselect="catalog('{{plugin.id | base64encode}}', '{{item.url | base64encode}}')">
				{% endif %}						
					<img style="tv-placeholder: movie;" src="{{item.icon}}" width="{{item.width}}" height="{{item.height}}"/>
				 	<title class="foo2">{{item.title}}</title>
					<overlay style="padding: 0">
					{% if item.play_state == 2 %}
					<badge class="foo3" src="resource://overlay-checkmark"/>
					{% elif item.play_state == 1 %}
					<badge class="foo3" src="resource://button-play"/>
					{% endif %}
					</overlay>
				</lockup>
										
		  {% endfor %}
		  </section>
		  </grid>
	  </collectionList>
	</stackTemplate>
  </document>
