<document>
	<head>
	  <style>
	  @media tv-template and (tv-theme:light) {
      	.foo { color:rgb(0, 0, 0); tv-highlight-color:rgb(0, 0, 0);}
	  }
	  @media tv-template and (tv-theme:dark) {
      	.foo { color:rgb(255, 255, 255); tv-highlight-color:rgb(255,255,255);}
	  }
	</style>
	</head>
	<stackTemplate>		
		<!--<banner>
			<buttonLockup onselect="load('/settings')">
				<badge src="/templates/settings.png" width="50" height="50"/>
			</buttonLockup>
		</banner>-->
	  <collectionList>
		  <grid>
		  <section>
				{% for plugin in menu %}
				<lockup onholdselect="load('{{plugin.menuurl}}')" onselect="load('/catalog/{{plugin.id | base64encode}}')">
					<img src="/{{plugin.icon}}" width="256" height="256"/>
				 	<title class="foo">{{plugin.name}}</title>				 					 	
				</lockup>
				{% endfor %}
			</section>
		  </grid>
	  </collectionList>
	</stackTemplate>
  </document>
