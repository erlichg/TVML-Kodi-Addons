  <document>
	<head>
	  <style>
	  @media tv-template and (tv-theme:light) {
      	.foo { color:rgb(0, 0, 0); tv-highlight-color:rgb(255, 255, 255);}
	  }
	  @media tv-template and (tv-theme:dark) {
      	.foo { color:rgb(255, 255, 255); tv-highlight-color:rgb(0,0,0);}
	  }
	</style>
	</head>
	<catalogTemplate>
	  <list style="width: 1000">
		  <section>
				{% for addon in addons %}
				<listItemLockup onselect="post('/installAddon', btoa('{{addon['data']['id']}}'))" onholdselect="post('/getAddonData', btoa('{{addon['data']['id']}}'))">								
				 	<title class="foo">{{addon['name']}}</title>
				 	<relatedContent>
					 	<lockup>
						 	<img src="{{addon['icon']}}" width="857" height="842"/>
						 	<title class="foo">{{addon['data']['summary']}}</title>
						 	<description class="foo">{{addon['data']['description']}}</description>
					 	</lockup>
				 	</relatedContent>			 					 	
				</listItemLockup>
				{% endfor %}
			</section>
	  </list>
	</catalogTemplate>
  </document>
