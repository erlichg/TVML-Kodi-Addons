<document>
	<head>
	  <style>
	  @media tv-template and (tv-theme:light) {
      	.left { tv-align: left; color:rgb(0, 0, 0); font-size: 30;}
      	.center { tv-align: center; text-align: left; color:rgb(0, 0, 0); font-size: 30; tv-text-max-lines:3}
	  }
	  @media tv-template and (tv-theme:dark) {
      	.left { tv-align: left; color:rgb(255, 255, 255); font-size: 30}
      	.center { tv-align: center; text-align: left; color:rgb(255, 255, 255); font-size: 30; tv-text-max-lines:3}
	  }
	</style>	
	</head>
	<descriptiveAlertTemplate>
		<title>{{title}}</title>
		<infoTable>
		{% for key, value in _dict.iteritems() %}
		<info>
			<row>
				<text class="left">{{key}}</text>
				<text class="center">{{value}}</text>
			</row>
		</info>
		{% endfor %}
		</infoTable>
	</descriptiveAlertTemplate>
</document>