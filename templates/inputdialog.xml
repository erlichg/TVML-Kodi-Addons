<?xml version="1.0" encoding="UTF-8" ?>
<document>
	<formTemplate>
		<banner>
			<title>{{title}}</title>
			<description>{{description}}</description>                
		</banner>
		<textField id="text" secure="{{secure}}">{{placeholder}}</textField>		
		<footer>
			<button abort="/response/{{msgid}}" onselect="var ans = event.currentTarget.parentNode.parentNode.children.item(1).getFeature('Keyboard').text; notify('/response/{{msgid}}/' + btoa(ans));">
				<text>{{button}}</text>
			</button>
		</footer>		 
	</formTemplate>
</document>